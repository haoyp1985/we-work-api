# WeWork Platform - 环境变量配置示例
# 复制此文件为 .env 并修改相应的值

# ================================
# 数据库配置
# ================================

# MySQL 配置
MYSQL_ROOT_PASSWORD=wework_root_2024
MYSQL_USER=wework_app
MYSQL_PASSWORD=wework_app_2024

# InfluxDB 配置
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=wework_influx_2024
INFLUXDB_TOKEN=wework_token_2024_change_me_in_production

# ================================
# 服务治理配置
# ================================

# Nacos 配置
NACOS_AUTH_TOKEN=wework_nacos_token_2024_change_me_in_production
NACOS_AUTH_KEY=serverIdentity
NACOS_AUTH_VALUE=security

# ================================
# 监控配置
# ================================

# Grafana 配置
GRAFANA_USER=admin
GRAFANA_PASSWORD=wework_grafana_2024

# ================================
# 应用配置
# ================================

# JWT Secret (生产环境必须修改)
JWT_SECRET=wework_jwt_secret_2024_change_me_in_production

# 企微API配置
WEWORK_API_BASE_URL=https://qyapi.weixin.qq.com
WEWORK_CALLBACK_URL=http://localhost:18080/api/callback

# ================================
# 部署环境配置
# ================================

# 部署环境 (dev/test/prod)
DEPLOY_ENV=dev

# 日志级别 (debug/info/warn/error)
LOG_LEVEL=info

# 容器时区
TZ=Asia/Shanghai

# ================================
# 外部服务配置
# ================================

# 邮件服务配置
MAIL_HOST=smtp.qq.com
MAIL_PORT=587
MAIL_USERNAME=your_email@qq.com
MAIL_PASSWORD=your_password
MAIL_FROM=noreply@wework-platform.com

# 短信服务配置
SMS_ACCESS_KEY=your_access_key
SMS_ACCESS_SECRET=your_access_secret
SMS_SIGN_NAME=WeWork平台
SMS_TEMPLATE_CODE=SMS_123456789

# ================================
# 安全配置
# ================================

# API Rate Limiting
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_REQUESTS=1000
API_RATE_LIMIT_WINDOW=3600

# 文件上传配置
UPLOAD_MAX_SIZE=10485760  # 10MB
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# ================================
# 性能配置
# ================================

# 数据库连接池配置
DB_POOL_INITIAL_SIZE=5
DB_POOL_MAX_ACTIVE=20
DB_POOL_MAX_IDLE=10

# Redis 连接池配置
REDIS_POOL_MAX_ACTIVE=20
REDIS_POOL_MAX_IDLE=10
REDIS_POOL_MIN_IDLE=5

# JVM 配置
JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC

# ================================
# 开发调试配置
# ================================

# 是否启用调试模式
DEBUG_ENABLED=false

# 是否启用性能监控
PERFORMANCE_MONITORING_ENABLED=true

# 是否启用API文档
API_DOCS_ENABLED=true

# Swagger UI 访问路径
SWAGGER_UI_PATH=/swagger-ui.html